{
    "manifest_version": 3,
    "name": "KVK Search",
    "version": "1.0",
    "description": "Search selected text on KVK",
    "permissions": [
      "contextMenus",
      "activeTab",
      "storage"
    ],
    "icons": {
      "48": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "permissions": ["contextMenus"]
  }
  